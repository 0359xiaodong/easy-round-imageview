<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <com.hongtian.easyroundimageview.EasyRoundImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/photo_1"
            android:scaleType="centerCrop"
            app:hasLeftBottom="true"
            app:hasRightBottom="true"
            app:hasRightTop="true"
            app:radius="30dp"
            />

        <com.hongtian.easyroundimageview.EasyRoundImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/photo_1"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            app:hasLeftBottom="false"
            app:hasRightBottom="true"
            app:hasRightTop="true"
            app:hasLeftTop="true"
            app:radius="30dp"
            />

        <com.hongtian.easyroundimageview.EasyRoundImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/photo_1"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:hasLeftBottom="true"
            app:hasRightBottom="false"
            app:hasRightTop="true"
            app:hasLeftTop="true"
            app:radius="30dp"
            />

        <com.hongtian.easyroundimageview.EasyRoundImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/photo_1"
            android:scaleType="centerCrop"
            app:hasLeftBottom="true"
            app:hasRightBottom="true"
            app:hasRightTop="false"
            app:hasLeftTop="true"
            app:radius="30dp"
            />

    </RelativeLayout>

    <com.hongtian.easyroundimageview.EasyRoundImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/photo_1"
        android:scaleType="centerCrop"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="25dp"
        app:hasRightTop="true"
        app:hasRightBottom="true"
        app:radius="25dp"
        android:id="@+id/relativeLayout2" />

    <com.hongtian.easyroundimageview.EasyRoundImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/photo_1"
        android:scaleType="centerCrop"
        app:hasLeftTop="true"
        app:hasRightTop="true"
        app:radius="25dp"
        android:layout_alignTop="@+id/relativeLayout2"
        android:id="@+id/relativeLayout3" />

    <com.hongtian.easyroundimageview.EasyRoundImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/photo_1"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2"
        app:radius="100dp" />

    <com.hongtian.easyroundimageview.EasyRoundImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/photo_1"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        app:radius="30dp"/>

</RelativeLayout>
